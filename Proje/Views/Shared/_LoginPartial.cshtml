@using Microsoft.AspNet.Identity
<link type="text/css" rel="stylesheet" href="/PROJE/style.css">
<!-- Latest compiled and minified CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- Latest compiled JavaScript -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"></script>
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

<ul class="nav navbar-nav navbar-right">
    <li>@Html.ActionLink(Proje.Kaynaklar.lang.yonet, "AdminAnasayfa", "Home", htmlAttributes: new { style = "color:white ; text-decoration:none" })</li>&nbsp;
    <li>
        @Html.ActionLink("Merhaba " + User.Identity.GetUserName() + "! ", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", style = "color:white ; text-decoration:none" })
    </li>
    <li><a style="color:white; text-decoration:none" href="javascript:document.getElementById('logoutForm').submit()">Oturumu kapat</a></li>
</ul>
    }
}
else
{
<div class="nav navbar-nav navbar-right" style="text-decoration:none">
    <button class="btn btn-primary" style=" float:left; color:white">@Html.ActionLink(Proje.Kaynaklar.lang.kaydol, "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", style = "color:white; text-decoration:none" })</button>&nbsp;
    <button class="btn btn-primary" style=" color: white">@Html.ActionLink(Proje.Kaynaklar.lang.oturumac, "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", style = "color:white; text-decoration:none" })</button>&nbsp;
</div>
}
