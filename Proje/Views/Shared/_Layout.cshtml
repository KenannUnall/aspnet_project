<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>UnalKundura</title>

    @Scripts.Render("~/bundles/modernizr")
    <link type="text/css" rel="stylesheet" href="/PROJE/style.css">
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"></script>

</head>
<body>
    <div class="container-fluid">
        <nav class="navbar navbar-expand-sm bg-dark navbar-dark" >
            <div class="container-fluid">
                <a class="navbar-brand" href="#"><img src="/PROJE/images/unal.png" style="max-height: 65px; margin: 0px;"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse " id="collapsibleNavbar">
                    <div class="col-sm-2 ms-auto">
                        <ul class="nav navbar-nav navbar-right">
                            <li>@Html.ActionLink("Türkçe", "dilDegistir", "Home", new { lang = "tr", returnurl = this.Request.RawUrl}, htmlAttributes: new { style = "color:white; text-decoration:none" })</li>&emsp;
                            <li>@Html.ActionLink("İngilizce", "dilDegistir", "Home", new { lang = "en", returnurl = this.Request.RawUrl }, htmlAttributes: new { style = "color:white; text-decoration:none" })</li>
                        </ul>
               
                    </div>
                   
                    
                    <div class="btn-group ms-auto">
                        @Html.Partial("_LoginPartial")
                    </div>
                </div>

            </div>
        </nav>
        <nav class="navbar navbar-expand-sm bg-dark navbar-dark " style="padding: 0px;">
            <div class="container-fluid">
                <div class="collapse navbar-collapse" id="collapsibleNavbar">
                    <ul class="nav navbar-nav me-auto">
                        <li class="nav-item">@Html.ActionLink(Proje.Kaynaklar.lang.anasayfa, "Index", "Home", null, new { style = "color:white; text-decoration:none" })</li>&emsp;
                        <li class="nav-item">@Html.ActionLink(Proje.Kaynaklar.lang.kadin, "Kadin", "Home", null, new { style = "color:white; text-decoration:none" })</li>&emsp;
                        <li class="nav-item">@Html.ActionLink(Proje.Kaynaklar.lang.erkek, "Erkek", "Home", null, new { style = "color:white; text-decoration:none" })</li>&emsp;
                        <li class="nav-item">@Html.ActionLink(Proje.Kaynaklar.lang.cocuk, "Cocuk", "Home", null, new { style = "color:white; text-decoration:none" })</li>&emsp;
                        <li class="nav-item">@Html.ActionLink(Proje.Kaynaklar.lang.spor, "SporMalzemeleri", "Home", null, new { style = "color:white; text-decoration:none" })</li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container body-content">
            @RenderBody()

            <div class="container bg-dark">
                <div class="row">
                    <div class="col-sm-10 text-white">

                        <br><p style="color:white">@Html.ActionLink(Proje.Kaynaklar.lang.adres, "Index", "Home",new {style = "color:white"}) : Baruthane Caddesi No:143 ŞİŞLİ/İSTANBUL</p>
                            <p style="color:white">@Html.ActionLink(Proje.Kaynaklar.lang.tel, "Index", "Home", new { style = "color:white" }) :0212 230 62 07</p>
                            <p style="color:white">@Html.ActionLink(Proje.Kaynaklar.lang.mail, "Index", "Home", new { style = "color:white" }) :unalkundura@unalkundura.com</p>
                        <br>
                    </div>
                    <div class="col-sm-2 text-white">
                        <p></p>
                        <img src="/PROJE/images/qrcode.png" width="100%" height="150px">
                        <p></p>
                    </div>
                </div>

            </div>
<hr />
<footer>
    <p>&copy; @DateTime.Now.Year - ASP.NET Uygulamam</p>
</footer>
        </div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>

