@model IEnumerable<Proje.Models.Table>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Adm.cshtml";
}

<h2>ÜRÜN LİSTESİ</h2>

<p>
    @Html.ActionLink("Yeni Ürün Ekle", "Create", null, new { style = "text-decoration:none" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UrunCinsiyet)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UrunResim)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UrunFiyat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UrunMarka)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UrunCinsiyet)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UrunResim)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UrunFiyat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UrunMarka)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.UrunId  }) |
            @Html.ActionLink("Detaylar", "Details", new { id=item.UrunId}) |
            @Html.ActionLink("Sil", "Delete", new { id=item.UrunId })
        </td>
    </tr>
}

</table>
